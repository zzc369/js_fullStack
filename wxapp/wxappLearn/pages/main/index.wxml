<!-- pages/main/index.wxml -->
<view class="container">
  <swiper 
  indicator-dots="true"
  indicator-color="#eee"
  indicator-active-color="red"
  autoplay="true"
  >
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </block>
  </swiper>
</view>